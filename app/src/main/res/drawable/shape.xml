<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/ash_light"
                android:width="1dp"/>
            <solid
                android:color="@color/white"/>
            <corners
                android:radius="5dp"/>
            <size
                android:width="500dp"
                android:height="60dp"/>
        </shape>
    </item>
    <item
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <size
                android:width="500dp"
                android:height="55dp"/>
            <solid
                android:color="@color/white"/>
        </shape>
    </item>
</layer-list>